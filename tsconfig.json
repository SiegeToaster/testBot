{
	"compilerOptions": {
	  "target": "ES6",                          
	  "module": "commonjs",                    
	  "lib": ["es6"],                     
	  "allowJs": true,
	  "outDir": "build",                          
	  "rootDir": "src",
	  "strict": true,         
	  "noImplicitAny": true,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true, // needed to ignore .d.ts files in node_modules causing errors
	  "downlevelIteration": true,
	},
	  "include": [
		"src/*"
	  ],
	  "exclude": [
		"./temp/*",
		"./node_modules/*" // not working
	],
}
